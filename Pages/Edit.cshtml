@model okb3_archive.Pages.Archive.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменение</h1>

<h4>Файл</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FileEntry.Id" />
            <div class="mb-3">
                <label asp-for="FileEntry.Name" class="control-label"></label>
                <input asp-for="FileEntry.Name" class="form-control" />
                <span asp-validation-for="FileEntry.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FileEntry.DocumentTypeId" class="control-label"></label>
                <select asp-for="FileEntry.DocumentTypeId" class="form-control" asp-items="ViewBag.DocumentTypeId"></select>
                <span asp-validation-for="FileEntry.DocumentTypeId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться в архив</a>
</div>

